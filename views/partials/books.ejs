<a href="/books/new" class="item">Add a Book</a>
<% books.map(book => { %>
    <!-- <li> -->
        <div class="book item">
            <p><%= book.title %></p>
            <p><%= book.author %></p>
            <p>$<%= book.price %></p>
            <p>In Stock: <%= book.quantity %></p>
            <form action="/books/<%= book.id %>">
                <button>?</button>
            </form>
            <div>
                <form action="/books/<%= book.id %>/delete" method="post">
                    <button onclick="return confirm('Delete Book?')">x</button>
                </form>
            </div>
        </div>
    <!-- </li> -->
<% }) %>
