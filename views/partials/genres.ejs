<% genres.map(genre => { %>
    <div class="genre item" id="<%= genre.id %>">
        <div>
            <p><%= genre.genre %></p>
            <form action="/genres/<%= genre.id %>/update" method="get">
                <button>Update</button>
            </form>
        </div>
        <form action="/genres/<%= genre.id %>" method="get">
            <button>Find Related Books</button>
        </form>
    </div>
<% }) %>
